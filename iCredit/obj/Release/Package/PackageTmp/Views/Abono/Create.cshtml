@model CrediAdmin.Models.abono

<script type="text/javascript">
    $(function () {
        $('#Paga').blur(function () {
            calcularDevolucion();
        });
    });


   function calcularDevolucion()
   {
       var $dev = $('#Paga').val() - $('#Valor').val();
       var $nuevo = Math.round($dev).toFixed(2);
        if ($dev > 0) {
            $('#Devolucion').val($nuevo);
        } else {
            $('#Devolucion').val(0);
        }
       // alert('calculando devolucion:' + ($dev));

    }
</script>


